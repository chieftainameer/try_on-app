<%= form_for @micropost, html: { multipart: true } do |form| %>
	<%= render 'shared/error_messages', object: form.object %>

<div class="field" >
	<%= form.text_area :content, placeholder: "write a new post"  %>
	<span>
		<%= form.file_field :picture, accept: 'image/jpeg, image/gif, image.png' %>
	</span>
</div>
	<%= form.submit 'Post', class: 'btn btn-primary' %>
<% end %>

<script type="text/javascript">
	$('#micro_post_picture').bind('change', function(){
		var sizing = this.files[0].size/1024/1024;
		if( sizing > 2 ){
			alert("maximum size of file should be 5 ");
		}
	});
</script>