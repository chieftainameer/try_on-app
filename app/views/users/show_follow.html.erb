	<% provide(:title, @title) %>
	<div class="row">
		<aside class="col-md-4">
			<section class="user-info">
				<%= gravatar_for(@user, size:50) %>
				<h1><%= @user.name %></h1>
				<span><%= link_to "View my profile", @user %></span>
				<span><b>Microposts:</b><%= @user.micro_posts.count %></span>
			</section>
			<section class="stats">
				<%= render 'shared/stats' %>
				<% if @users.any? %>
					<div class="users-avatars">
						<% @users.each do |user| %>
							<%= link_to gravatar_for(user, size:30), user %>
						<% end %>
					</div>		
				<% end %>
			</section>
		</aside>
		<div class="col-md-8">
			<h3 class="center"><%= @title %></h3>
			<% if@users.any? %>
			<% @users.each do |user| %>
			<ul class="users follow">
				<li>
				<%= link_to gravatar_for(user), user %>
				<%= link_to user.name, user %>
			</li>
				<br/>
			</ul>
			
			<% end %>
			<%= will_paginate %>
			<% end %>
		</div>
	</div>