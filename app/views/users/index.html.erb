<% provide(:title, "All Users") %>

<h3 class="center">All Users (<%= @users.count %>)</h3>
<%= will_paginate %>
<ul class="users">
	<% @users.each do |user| %>
		<li>
			
			<%= gravatar_for user,size:80 %>
		    <%= link_to user.name, user %>
		    
		    <% if current_user.admin? && !current_user?(user) && user.activated? %>
				| <%= link_to 'Delete', user, method: :delete, data: { confirm:"Are you sure?" } %>
				
		    <% end %>
		</li>
	<% end %>
</ul>
<%= will_paginate %>