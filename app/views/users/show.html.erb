<% provide(:title,@user.name) %>






<div class="row">
	<aside class="col-md-4">
		
        <section class="user_info">
          <h1>
            <%= gravatar_for(@user) %> 
            <%= @user.name %>
          </h1>
        </section>
        <br/>
       <%= render 'shared/stats' %>
        <br/>
        <%= render 'shared/micropost_form' %>
    </aside>

<div class="col-md-8">
          <%= render 'follow_form' if logged_in? %>
          <% if @user.micro_posts.any? %>

          <h2>Microposts <%= @user.micro_posts.count %></h2>
          <ol class="microposts" >
             <%= render @microposts %>
          </ol>
          <%= will_paginate(@microposts) %>

          <%  end %>
</div>

</div>
   



