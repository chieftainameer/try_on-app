<% provide(:title,@user.name) %>






<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
          <h1>
          	<%= gravatar_for(@user) %> 
          	<%= @user.name %>
          </h1>
        </section>
    </aside>

</div>
   
<h3>
	<%= @user.email %>
</h3>

<h5>
	Joined <%= time_ago_in_words @user.created_at %> ago
</h5>


<h6>Time is <%= Time.now() %></h6>